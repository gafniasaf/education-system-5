{
  "info": {
    "name": "Education Platform API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Core backend endpoints — health, dashboard, notifications, messages, files (test-mode)."
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{base_url}}/api/health", "host": ["{{base_url}}"], "path": ["api", "health"] }
      }
    },
    {
      "name": "Dashboard",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-test-auth", "value": "{{role}}" } ],
        "url": { "raw": "{{base_url}}/api/dashboard", "host": ["{{base_url}}"], "path": ["api", "dashboard"] }
      }
    },
    {
      "name": "Notifications — list",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-test-auth", "value": "student" } ],
        "url": { "raw": "{{base_url}}/api/notifications", "host": ["{{base_url}}"], "path": ["api", "notifications"] }
      }
    },
    {
      "name": "Notifications — preferences (GET)",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-test-auth", "value": "student" } ],
        "url": { "raw": "{{base_url}}/api/notifications/preferences", "host": ["{{base_url}}"], "path": ["api", "notifications", "preferences"] }
      }
    },
    {
      "name": "Notifications — preferences (PATCH)",
      "request": {
        "method": "PATCH",
        "header": [ { "key": "x-test-auth", "value": "student" }, { "key": "content-type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"message:new\": true\n}" },
        "url": { "raw": "{{base_url}}/api/notifications/preferences", "host": ["{{base_url}}"], "path": ["api", "notifications", "preferences"] }
      }
    },
    {
      "name": "Notifications — read all (PATCH)",
      "request": {
        "method": "PATCH",
        "header": [ { "key": "x-test-auth", "value": "student" } ],
        "url": { "raw": "{{base_url}}/api/notifications/read-all", "host": ["{{base_url}}"], "path": ["api", "notifications", "read-all"] }
      }
    },
    {
      "name": "Messages — threads (GET)",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-test-auth", "value": "student" } ],
        "url": { "raw": "{{base_url}}/api/messages/threads", "host": ["{{base_url}}"], "path": ["api", "messages", "threads"] }
      }
    },
    {
      "name": "Messages — list in thread (GET)",
      "request": {
        "method": "GET",
        "header": [ { "key": "x-test-auth", "value": "student" } ],
        "url": { "raw": "{{base_url}}/api/messages?thread_id={{thread_id}}", "host": ["{{base_url}}"], "path": ["api", "messages"], "query": [ { "key": "thread_id", "value": "{{thread_id}}" } ] }
      }
    },
    {
      "name": "Messages — mark read (PATCH)",
      "request": {
        "method": "PATCH",
        "header": [ { "key": "x-test-auth", "value": "student" } ],
        "url": { "raw": "{{base_url}}/api/messages?id={{message_id}}", "host": ["{{base_url}}"], "path": ["api", "messages"], "query": [ { "key": "id", "value": "{{message_id}}" } ] }
      }
    },
    {
      "name": "Files — upload via PUT (test-mode)",
      "request": {
        "method": "PUT",
        "header": [ { "key": "x-test-auth", "value": "student" }, { "key": "content-type", "value": "text/plain" } ],
        "body": { "mode": "raw", "raw": "hello world" },
        "url": { "raw": "{{base_url}}/api/files/upload-url?owner_type=user&owner_id=test-user&content_type=text/plain", "host": ["{{base_url}}"], "path": ["api", "files", "upload-url"], "query": [
          { "key": "owner_type", "value": "user" },
          { "key": "owner_id", "value": "test-user" },
          { "key": "content_type", "value": "text/plain" }
        ] }
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:3022" },
    { "key": "role", "value": "teacher" },
    { "key": "thread_id", "value": "00000000-0000-0000-0000-000000000000" },
    { "key": "message_id", "value": "00000000-0000-0000-0000-000000000000" }
  ]
}


